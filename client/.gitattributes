# Automatically normalize line endings
* text=auto

# Explicitly enforce LF (Unix-style) line endings for code files
*.js   text eol=lf
*.jsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.sh   text eol=lf
*.json text eol=lf

# Allow CRLF (Windows-style) for specific Windows script files
*.bat  text eol=crlf
*.ps1  text eol=crlf
